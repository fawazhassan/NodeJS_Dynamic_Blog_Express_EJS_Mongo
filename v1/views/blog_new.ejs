<% include ./partials/header%>
<div class = "ui main text container segment">
    
    <div class = "ui huge header">New Blog</div>
    <form class = "ui form" action = "/blog" method = "POST">
        <div class = "field">
            <label>Title</label>
            <input type = "text" name = "blog[title]" placeholder = "Blog Post Title">    
            
        </div>
        <div class = "field">
            <label>Image</label>
            <input type = "text" name = "blog[image]" placeholder = "Blog Post Image">            
            
        </div>
        <div class = "field">
            <label>Blog Content</label>
            <textarea name = "blog[body]" placeholder = "Blog Post Body"></textarea>
            
        </div>
        <div class = "field">
            <input class = "ui inverted blue button" type = "submit">    
            
        </div>
        

    </form>
</div>




<% include ./partials/footer%>
