<% include ./partials/header%>
<div class = "ui main text container segment">
    
    <div class = "ui huge header">Edit <%=blogPost.title%></div>
    <form class = "ui form" action = "/blog/<%=blogPost._id%>?_method=PUT" method = "POST">
        <div class = "field">
            <label>Title</label>
            <input type = "text" name = "blog[title]" value = "<%=blogPost.title%>">    
            
        </div>
        <div class = "field">
            <label>Image</label>
            <input type = "text" name = "blog[image]"  value = "<%=blogPost.image%>">            
            
        </div>
        <div class = "field">
            <label>Blog Content</label>
            <textarea name = "blog[body]"><%=blogPost.body%></textarea>
            
        </div>
        <div class = "field">
            <input class = "ui inverted blue button" type = "submit">    
            
        </div>
        

    </form>
</div>